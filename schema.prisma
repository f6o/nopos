datasource db {
    provider = "sqlite"
    url      = "file:dev.db"
}

generator db {
    provider = "go run github.com/steebchen/prisma-client-go"
}

model User {
    id    String  @id @default(cuid())
    displayName  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    
    hands HandHistory[]
}

model HandHistory {
    id    String  @id @default(cuid())
    createdAt DateTime @default(now())

    user User @relation(fields: [userId], references: [id])
    userId String

    suit String
    rank String
}
